<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTextView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/main_view_backround</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25dp</item>
        <item name="fontFamily">@font/calibrib</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="PuzzleButton">
        <item name="android:layout_width">74dp</item>
        <item name="android:layout_height">74dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/puzzle_button</item>
        <item name="fontFamily">@font/concert_one_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>